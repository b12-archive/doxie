{ "name": "doxie"
, "version": "0.0.0-work-in-progress"
, "description": "The simplest doc generator youâ€™ve seen."

, "dependencies":
  { "1-liners": "^0.3.0"
  , "doxie-core": "^0.2.1"
  , "tiny-error": "^0.2.1"
  }

, "scripts":
  { "coveralls": "npm run coverage && cat ./coverage/lcov.info | coveralls"
  , "coverage": "istanbul cover test.js"
  , "develop": "nodangel --ignore node_modules --ignore coverage --exec 'npm run --silent test:lite'"
  , "test": "jshint . && npm run test:lite"
  , "test:lite": "node test.js | tap-spec"
  , "view-coverage": "echo 'Generating coverage reports...'; npm run coverage >/dev/null && echo '...done.' && xdg-open ./coverage/lcov-report/index.html >/dev/null"
  }

, "devDependencies":
  { "tap-spec": "2.2.2"
  , "coveralls": "2.11.2"
  , "jshint": "2.8.0"
  , "istanbul": "0.3.14"
  , "nodangel": "1.3.8"

  , "tape-catch": "1.0.4"
  }

, "bin":
  { "doxie": "bin/doxie.js"
  }
, "preferGlobal": true
, "files":
  [ "**/*.js"
  , "/Readme.md"
  , "/License.md"
  ]

, "license": "MIT"
, "keywords":
  [ "jsdoc"
  , "markdown"
  , "documentation"
  , "dox"
  , "readme"
  , "markdox-alternative"
  , "doxme-alternative"
  , "docco-alternative"
  , "docs"
  , "doc"
  , "api"
  , "template"
  , "generator"
  ]
, "author": "Studio B12 GmbH  (http://www.studio-b12.de/)"
, "contributors":
  [ "Tomek Wiszniewski  <t.wiszniewski@gmail.com>"
  ]
, "repository":
  { "type": "git"
  , "url": "git@github.com:studio-b12/doxie.git"
  }
}
